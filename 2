#include <iostream>     
#include<vector>

using namespace std;

int main() {
    setlocale(LC_ALL, "RU");

    int n;
    int sumacht = 0;

    cout << "Введите количество элементов: ";
    cin >> n;

    int* array = new int[n];

    for (int i = 0; i < n; i++) {
        cout << "Введите элементы массива: ";
        cin >> array[i];
    }

    int max = array[0];

    for (int i = 0; i < n; i++) {
        if (array[i] % 2 == 0) {
            sumacht++;
        }
        else {
            if (max < array[i]) {
                max = array[i];
            }
        }
    }
    cout << "Наибольшее нечётное: " << max << endl;
    cout << "Количество чётных чисел: " << sumacht << endl;

    delete[] array;
    
    return 0;
}
